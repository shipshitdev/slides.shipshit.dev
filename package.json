{
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "husky": "9.1.7",
    "lint-staged": "16.2.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "biome check --write"
    ]
  },
  "name": "deckflow.com",
  "description": "Pitch deck creation platform with AI assistance",
  "private": true,
  "scripts": {
    "build": "bun run --filter '*' build",
    "build:api": "bun run --filter api build",
    "build:web": "bun run --filter web build",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "dev": "bun run --filter '*' dev",
    "dev:api": "bun run --filter api dev",
    "dev:web": "bun run --filter web dev",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "pre:install": "bun update --latest --recursive && bun install",
    "prepare": "husky",
    "prepare:deploy": "bun install",
    "start": "bun run --filter '*' start",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch"
  },
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ]
}
